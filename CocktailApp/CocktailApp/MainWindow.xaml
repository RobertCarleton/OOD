<Window x:Class="CocktailApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:CocktailApp"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Window.Resources>
        <Style x:Key="BackgroundImageStyle" TargetType="Control">
            <Setter Property="Background">
                <Setter.Value>
                    <ImageBrush ImageSource="/CocktailApp;component/Images/bar.PNG"/>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>
    <Grid>

        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <!-- Header -->
        <Border  Background="DarkKhaki" Padding="5">
            <TextBlock Text="Cocktail Recipe App" FontSize="50" FontWeight="Bold" FontStyle="Normal" HorizontalAlignment="Center"/>
        </Border>

        <!-- Main Content Area -->
        <Frame Grid.Row="1" x:Name="MainFrame" NavigationUIVisibility="Hidden" Style="{StaticResource BackgroundImageStyle}"/>
        

    </Grid>
</Window>
